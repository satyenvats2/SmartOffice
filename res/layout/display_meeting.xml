<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE0E5"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer_meeting_RL"
        android:layout_marginBottom="10dp" >

        <!-- android:layout_marginBottom="5dp" -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/header_meeting_subject_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="20dp"
                android:text="Subject"
                android:textSize="19sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/message_body_RL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_meeting_subject_TV"
                android:layout_margin="10dp"
                android:background="#FFFFFF"
                android:padding="5dp" >

                <RelativeLayout
                    android:id="@+id/message_body_header_RL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/senders_IV"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_launcher" />

                    <RelativeLayout
                        android:id="@+id/senders_detais_RL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/senders_IV" >

                        <TextView
                            android:id="@+id/sender_name_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sender Username"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/sender_emailID_TV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/sender_name_TV"
                            android:layout_marginTop="3dp"
                            android:text="Sender EmailID"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/message_real_message_TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/message_body_header_RL"
                    android:text="Message\nmessage\nmessage\nmessage\nmessage\nmessage\nmessage\nmessage\nmessage\nmessage\nmessage\nmessage\nmessage\nmessage\nmessage\nmessage\nmessage\nmessage\nmessage\nmessage\nmessage\nmessage\nmessage\nmessage\nmessage\nmessage\nmessage\nmessage\nmessage" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/responses_RL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/message_body_RL"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:visibility="gone" />
            
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/footer_meeting_RL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:padding="10dp" >

        <Button
            android:id="@+id/accept_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:onClick="onAccept"
            android:text="Accept" />

        <Button
            android:id="@+id/reject_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:onClick="onReject"
            android:text="Reject" />

        <Button
            android:id="@+id/update_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:onClick="onUpdate"
            android:text="Update" />
    </RelativeLayout>

</RelativeLayout>