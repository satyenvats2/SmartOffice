<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messages_list_RL"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/fakeActionBarRL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_border"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="6dp" >

        <ImageButton
            android:id="@+id/left_drawer_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:onClick="onBack"
            android:scaleType="fitXY"
            android:src="@drawable/back_button" />

        <TextView
            android:id="@+id/username_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/left_drawer_button"
            android:singleLine="true"
            android:text="User Name"
            android:textSize="18sp"
            android:typeface="serif"
            android:textIsSelectable="true"/>
    </RelativeLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_write_bar"
        android:layout_below="@+id/fakeActionBarRL"
        android:background="@drawable/bottom_border"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:listSelector="#00000000"
        android:transcriptMode="alwaysScroll"
	    android:stackFromBottom="true">
    </ListView>

    <LinearLayout
        android:id="@+id/bottom_write_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFF"
        android:focusableInTouchMode="true" >

        <EditText
            android:id="@+id/message_ET"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#FFF"
            android:hint="Your message..."
            android:padding="5sp"
            android:layout_marginLeft="5dp"/>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:onClick="onSend"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/send_email_blue" />
    </LinearLayout>

    <TextView
        android:id="@+id/notification_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No messages."
        android:typeface="serif"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

	<ProgressBar
			style="?android:attr/progressBarStyleLarge"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/progressBarMSG"
			android:layout_centerVertical="true"
			android:layout_centerHorizontal="true"/>

</RelativeLayout>