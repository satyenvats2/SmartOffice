<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/from_RL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <ImageView
                android:id="@+id/from_IV"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher" />

            <EditText
                android:id="@+id/from_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/from_IV"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="pranavmahajan21@gmail.com" />
        </RelativeLayout>

        <com.mw.smartoff.services.UserAutoCompleteTextView
            android:id="@+id/to_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/from_RL"
            android:layout_marginTop="8dp"
            android:hint="To" />

        <EditText
            android:id="@+id/cc_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/to_TV"
            android:layout_marginTop="8dp"
            android:hint="Cc" />

        <EditText
            android:id="@+id/subject_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cc_TV"
            android:layout_marginTop="8dp"
            android:hint="Subject" />

        <EditText
            android:id="@+id/content_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subject_TV"
            android:layout_marginTop="8dp"
            android:hint="Compose email" />
    </RelativeLayout>

</ScrollView>