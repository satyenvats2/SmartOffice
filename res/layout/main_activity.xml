<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/fakeActionBarRL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="6dp"
            android:paddingTop="6dp" android:background="@drawable/bottom_border">

            <ImageButton
                android:id="@+id/left_drawer_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:onClick="onOpenLeftDrawer"
                android:scaleType="fitXY"
                android:src="@drawable/menu_blue" android:background="@null"/>

            <!--<ImageButton-->
                <!--android:id="@+id/create_mail_or_meeting_button1"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:layout_toLeftOf="@+id/create_mail_or_meeting_button2"-->
                <!--android:background="@null"-->
                <!--android:onClick="onMeeting"-->
                <!--android:scaleType="fitXY"-->
                <!--android:src="@drawable/compose_meeting_green" />-->

            <!--<ImageButton-->
                <!--android:id="@+id/create_mail_or_meeting_button2"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginRight="16dp"-->
                <!--android:background="@null"-->
                <!--android:onClick="onEmail"-->
                <!--android:scaleType="fitXY"-->
                <!--android:src="@drawable/compose_email_green" />-->
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/frame_to_be_replaced"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/fakeActionBarRL" >
        </FrameLayout>
    </RelativeLayout>

    <!-- left drawer -->

    <RelativeLayout
        android:id="@+id/leftDrawer_RL"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#000000" android:alpha=".7">

        <TextView
                android:id="@+id/username_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:text="Tushar Khichariya"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" android:layout_centerHorizontal="true" android:typeface="serif"
                android:textIsSelectable="false"/>

        <ListView
            android:id="@+id/leftDrawer_LV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/username_TV"
            android:layout_above="@+id/leftDrawer_logout_LL"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="@android:color/holo_green_dark"
            android:dividerHeight="1dp" />

        <LinearLayout
            android:id="@+id/leftDrawer_logout_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:onClick="onLogOut"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/logout_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:text="Logout"
                android:textColor="@color/drawer_elements_color"
                
                android:textSize="22sp"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>