<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE0E5" >

    <TextView
        android:id="@+id/header_email_subject_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:text="Subject"
        android:textSize="19sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/message_body_RL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_email_subject_TV"
        android:layout_margin="5dp"
        android:background="#FFFFFF"
        android:padding="5dp" >

        <RelativeLayout
            android:id="@+id/message_body_header_RL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/senders_IV"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_launcher" />

            <RelativeLayout
                android:id="@+id/senders_detais_RL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/senders_IV" >

                <TextView
                    android:id="@+id/sender_name_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sender Username"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/sender_emailID_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sender_name_TV"
                    android:layout_marginTop="3dp"
                    android:text="Sender EmailID"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/message_real_message_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_body_header_RL"
            android:layout_marginTop="10dp"
            android:text="Mesaage" />
    </RelativeLayout>

</RelativeLayout>